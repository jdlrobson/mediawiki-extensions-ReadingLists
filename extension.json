{
	"name": "ReadingLists",
	"version": "0.1.0",
	"author": [
		"GergÅ‘ Tisza"
	],
	"url": "https://www.mediawiki.org/wiki/Extension:ReadingLists",
	"descriptionmsg": "readinglists-desc",
	"license-name": "GPL-2.0-or-later",
	"type": "other",
	"requires": {
		"MediaWiki": ">= 1.37.0"
	},
	"AutoloadNamespaces": {
		"MediaWiki\\Extension\\ReadingLists\\": "src/"
	},
	"TestAutoloadNamespaces": {
		"MediaWiki\\Extension\\ReadingLists\\Tests\\": "tests/phpunit/"
	},
	"ExtensionMessagesFiles": {
		"ReadingListsAlias": "ReadingLists.alias.php"
	},
	"APIModules": {
		"readinglists": "MediaWiki\\Extension\\ReadingLists\\Api\\ApiReadingLists"
	},
	"APIListModules": {
		"readinglistentries": {
			"class": "MediaWiki\\Extension\\ReadingLists\\Api\\ApiQueryReadingListEntries",
			"factory": "MediaWiki\\Extension\\ReadingLists\\Api\\ApiQueryReadingListEntries::factory"
		}
	},
	"APIMetaModules": {
		"readinglists": {
			"class": "MediaWiki\\Extension\\ReadingLists\\Api\\ApiQueryReadingLists",
			"factory": "MediaWiki\\Extension\\ReadingLists\\Api\\ApiQueryReadingLists::factory"
		}
	},
	"ConfigRegistry": {
		"ReadingLists": "GlobalVarConfig::newInstance"
	},
	"SpecialPages": {
		"ReadingLists": "MediaWiki\\Extension\\ReadingLists\\SpecialReadingLists"
	},
	"config": {
		"ReadingListsCluster": {
			"value": false,
			"description": "Database cluster to use for storing the lists. False means the cluster of the current wiki will be used."
		},
		"ReadingListsDatabase": {
			"value": false,
			"description": "Database to use for storing the lists. False means use the database of the current wiki. To use a table prefix, use '<database>-<prefix'>' format."
		},
		"ReadingListsCentralWiki": {
			"value": false,
			"description": "Database name of the central wiki. This is unrelated to data storage (see ReadingListsDatabase for that) and only used to identify which wiki should be used for jobs and such."
		},
		"ReadingListsMaxListsPerUser": {
			"value": 100,
			"description": "Maximum allowed number of lists per user."
		},
		"ReadingListsMaxEntriesPerList": {
			"value": 1000,
			"description": "Maximum allowed number of entries per list."
		},
		"ReadingListsDeletedRetentionDays": {
			"value": 30,
			"description": "Purge deleted lists and list entries after this many days."
		}
	},
	"Hooks": {
		"APIQuerySiteInfoGeneralInfo": "MediaWiki\\Extension\\ReadingLists\\HookHandler::onAPIQuerySiteInfoGeneralInfo",
		"BeforePageDisplay": "MediaWiki\\Extension\\ReadingLists\\HookHandler::onBeforePageDisplay",
		"LoadExtensionSchemaUpdates": "MediaWiki\\Extension\\ReadingLists\\HookHandler::onLoadExtensionSchemaUpdates",
		"UnitTestsAfterDatabaseSetup": "MediaWiki\\Extension\\ReadingLists\\HookHandler::onUnitTestsAfterDatabaseSetup",
		"UnitTestsBeforeDatabaseTeardown": "MediaWiki\\Extension\\ReadingLists\\HookHandler::onUnitTestsBeforeDatabaseTeardown"
	},
	"ResourceFileModulePaths": {
		"localBasePath": "",
		"remoteExtPath": "ReadingLists"
	},
	"ResourceModules": {
		"readinglist.icons": {
			"selectorWithVariant": ".mw-ui-icon-vector-gadget-rl-{name}-{variant}:before,.mw-ui-icon-rl-{name}-{variant}:before",
			"selectorWithoutVariant": ".mw-ui-icon-vector-gadget-rl-{name}:before,.mw-ui-icon-rl-{name}:before",
			"useDataURI": true,
			"defaultColor": "#54595d",
			"class": "ResourceLoaderOOUIIconPackModule",
			"variants": [],
			"icons": [
				"bookmarkOutline"
			]
		},
		"special.readinglist.styles": {
			"targets": [ "desktop", "mobile" ],
			"styles": [ "resources/special.readinglist.styles.less" ]
		},
		"readinglist.scripts": {
			"dependencies": [
				"mediawiki.api",
				"readinglist.icons",
				"mediawiki.Title",
				"mediawiki.user"
			],
			"targets": [ "desktop", "mobile" ],
			"es6": true,
			"styles": [ "resources/readinglist.scripts/styles.less" ],
			"packageFiles": [
				"resources/readinglist.scripts/index.js",
				"resources/readinglist.scripts/special.js",
				"resources/readinglist.scripts/utils.js",
				"resources/readinglist.scripts/api.js",
				"resources/readinglist.scripts/overlayManager.js",
				"resources/readinglist.scripts/consts.js"
			]
		},
		"readinglist.scripts.views": {
			"dependencies": [
				"mediawiki.api",
				"mediawiki.user",
				"vue",
				"wvui-search"
			],
			"targets": [ "desktop", "mobile" ],
			"messages": [
				"readinglists-browser-add-entry-success"
			],
			"es6": true,
			"packageFiles": [
				"resources/readinglist.scripts/views/index.js",
				"resources/readinglist.scripts/views/urlGenerator.js",
				"resources/readinglist.scripts/views/ReadingListPage.vue",
				"resources/readinglist.scripts/views/IntermediateState.vue",
				"resources/readinglist.scripts/views/ErrorBox.vue",
				"resources/readinglist.scripts/views/CollectionEditorDialog.vue",
				"resources/readinglist.scripts/views/CollectionDialog.vue",
				"resources/readinglist.scripts/views/Dialog.vue"
			]
		}
	},
	"ServiceWiringFiles": [
		"ServiceWiring.php"
	],
	"MessagesDirs": {
		"ReadingLists": [
			"i18n",
			"i18n/api"
		]
	},
	"manifest_version": 2
}
